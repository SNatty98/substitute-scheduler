---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Home">
	<main style="padding: 2rem; text-align: center;">
		<h1>Substitute Scheduler</h1>
		<p>Welcome to the substitute teacher management system</p>
		<div style="margin-top: 2rem;">
			<a
				href="/login"
				style="margin-right: 1rem; padding: 0.5rem 1rem; background: #0066cc; color: white; text-decoration: none; border-radius: 4px;"
			>
				Login
			</a>
			<a
				href="/register"
				style="margin-right: 1rem; padding: 0.5rem 1rem; background: #28a745; color: white; text-decoration: none; border-radius: 4px;"
			>
				Register
			</a>
		</div>
	</main>
</BaseLayout>
